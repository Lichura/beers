<p id="notice"><%= notice %></p>

<h1>Mensajes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Mail</th>
      <th>Consulta</th>
      <th>Creado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensajes.each do |mensaje| %>
      <tr>
        <td><%= mensaje.name %></td>
        <td><%= mensaje.mail %></td>
        <td><%= mensaje.consulta %></td>
        <td><%= mensaje.created_at %></td>
        <td><%= link_to 'Mostrar', mensaje %></td>
        <td><%= link_to 'Editar', edit_mensaje_path(mensaje) %></td>
        <td><%= link_to 'Eliminar', mensaje, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Mensaje', new_mensaje_path %>
<%= link_to 'Menu', menu_path %>
