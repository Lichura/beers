<p id="notice"><%= notice %></p>

<h1>Galeria</h1>

<table>
  <thead>
    <tr>
      <th>Foto</th>
      <th>Foto_numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galeria.each do |galerium| %>
      <tr>
        <td><%= galerium.foto %></td>
        <td><%= galerium.foto_numero %></td>
        <td><%= link_to 'Mostrar', galerium %></td>
        <td><%= link_to 'Editar', edit_galerium_path(galerium) %></td>
        <td><%= link_to 'Elimiar', galerium, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Imagen', new_galerium_path %>
